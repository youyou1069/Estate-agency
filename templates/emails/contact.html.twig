<mjml>
    <mj-body>
        <mj-section>
            <mj-column>

                <mj-image width="100" src="#"></mj-image>

                <mj-divider border-color="#F45E43"></mj-divider>

                <mj-text font-size="20px" color="#F45E43" font-family="helvetica">Bonjour</mj-text>
                <table>
                    <tr>
                        <td>Nom du bien</td>

                    </tr>
                    <tr>
                        <td>Prénom</td>
                        <td >{{ contact.firstname }}</td>
                    </tr>
                    <tr>
                        <td>Nom</td>
                        <td >{{ contact.lastname }}</td>
                    </tr>
                    <tr>
                        <td>Téléphone</td>
                        <td >{{ contact.phone }}</td>
                    </tr>
                    <tr>
                        <td>Email</td>
                        <td >{{ contact.email }}</td>
                    </tr>
                    <tr>
                        <td>Message</td>
                        <td >{{ contact.message | nl2br}}</td>
                    </tr>
                </table>
                </mj-column>
        </mj-section>
    </mj-body>
</mjml>